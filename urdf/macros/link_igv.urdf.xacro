<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- box -->
  <xacro:macro name="create_box" params="m x y z *origin">
    <visual>
      <xacro:insert_block name="origin"/>
      <geometry>
        <box size="${x} ${y} ${z}"/>
      </geometry>
    </visual>
